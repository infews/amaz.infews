#item
  .summary
    %span.title= link_to_unless_current @item.title, item_url
    %span.edition= "(#{[@item.binding, @item.edition].compact.join(', ')})"
    .authors= "by #{@item.authors.to_sentence}"
  #pricing_top
    .list_price
      %span.label List Price:
      %span.price= @item.list_price[:formatted]
    .amazon_price
      %span.label Amazon Price:
      %span.price
        = @item.amazon_price[:formatted] + link_to('*', :href => '#disclaimer')
  #top_box
    #rating
      #stars
        = "#{@item.average_rating} out of 5 stars"
        .count= "(#{pluralize_with_delimiter(@item.number_of_reviews, 'customer review') })"
    #rank
      %span.label Amazon Sales Rank:
      %span.rank= number_with_delimiter @item.sales_rank
  #image= image_tag @item.image[:url], :alt => @item.title
  #pricing_bottom
    .list_price
      %span.label List Price:
      %span.price= @item.list_price[:formatted]
    .amazon_price
      %span.label Amazon Price:
      %span.price= @item.amazon_price[:formatted] + link_to('*', :href => '#disclaimer')
#disclaimer
  %a{:name => 'disclaimer'} 
  %em=AmazonAWS::DISCLAIMER